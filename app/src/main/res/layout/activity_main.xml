<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top bar: greeting + bell -->
    <LinearLayout
        android:id="@+id/llyTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivBell"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"/>
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Kidz"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <!-- Dashboard card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/llyTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <!-- Red pill header -->
            <View
                android:id="@+id/headerPill"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#C52322"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignTop="@id/headerPill"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"/>

                <!-- Left column: Water & Amonia -->
                <LinearLayout
                    android:id="@+id/leftCol"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headerPill"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp">

                    <!-- Water -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_water"
                            android:contentDescription="water" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:id="@+id/tvWaterLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Water Level"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvWaterValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:includeFontPadding="false"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvWaterStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Normal"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:background="@drawable/status_normal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Amonia -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="18dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_amonia"
                            android:contentDescription="amonia" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amonia"
                                android:textStyle="bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50%"
                                android:includeFontPadding="false"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Warning"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:background="@drawable/status_warning"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Right column: Temperature & Humidity -->
                <LinearLayout
                    android:id="@+id/rightCol"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/headerPill"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp">

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_temperature"
                            android:contentDescription="temp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperature"
                                android:textStyle="bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvTempValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40Â°C"
                                android:includeFontPadding="false"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Danger"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:background="@drawable/status_danger"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="18dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_humidity"
                            android:contentDescription="humidity" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:textStyle="bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10%"
                                android:includeFontPadding="false"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Danger"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:background="@drawable/status_danger"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Three rounded red buttons -->
    <LinearLayout
        android:id="@+id/btnRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_red_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_control_panel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control Panel"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_red_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_history"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_red_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Optional decorative grey background shapes (simple view to mimic) -->
    <View
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:alpha="0.06"
        android:background="@drawable/background"
        app:layout_constraintTop_toBottomOf="@id/btnRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>