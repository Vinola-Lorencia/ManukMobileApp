<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Ilustrasi -->
    <ImageView
        android:id="@+id/onboarding_image1"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/onboarding_image1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="Onboarding illustration 1" />

    <!-- Teks sambutan -->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Manuk!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/onboarding_image1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Deskripsi tambahan -->
    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kandang Pintar, Ayam Sehat"
        android:textSize="18sp"
        android:textColor="#9E2A2F"
        android:layout_below="@id/textWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Tombol Get Started -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9E2A2F"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
