<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Ilustrasi -->
    <ImageView
        android:id="@+id/onboarding_image2"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/onboarding_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="Onboarding illustration 2" />

    <!-- Teks penjelasan -->
    <TextView
        android:id="@+id/textDesc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solusi pintar untuk merawat ayam, memantau kandang, dan meningkatkan hasil ternak dengan teknologi."
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_below="@id/onboarding_image2"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="16dp" />

    <!-- Tombol Next -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9E2A2F"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
