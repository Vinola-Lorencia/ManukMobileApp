<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF8F6"
    tools:context=".ControlActivity">
    <LinearLayout
        android:id="@+id/llyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- Tombol Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintMarginStart="20dp"
            app:layout_constraintMarginTop="20dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control Panel"
            android:textColor="#801716"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="btnBack"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintMarginStart="20dp"
            app:layout_constraintMarginTop="16dp" />
    </LinearLayout>

    <!-- Baris Fan -->
    <LinearLayout
        android:id="@+id/layoutFans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/llyHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fan 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_red_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan 1"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Fan 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_green_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan 2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Fan 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_red_button"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan 3"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Baris Lampu -->
    <LinearLayout
        android:id="@+id/layoutLamps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Switches for fans -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumbTint=""
                android:trackTint="@color/red_light"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:thumbTint="@color/green_700"
                android:trackTint="@color/green_light"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumbTint="@color/red_700"
                android:trackTint="@color/red_light"/>
        </LinearLayout>

        <!-- Lamp 1 & 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_red_large"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 1 & 2"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Lamp 3 & 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_green_large"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 3 & 4"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Baris Terakhir: Curtains dan Cooling Pad -->
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutLamps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Curtains -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_green_button"
                android:src="@drawable/ic_curtain"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curtains"
                android:textColor="#A41111"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Cooling Pad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_green"
                android:src="@drawable/ic_coolingpad"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooling Pad"
                android:textColor="#388E3C"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Logo bawah -->
    <ImageView
        android:id="@+id/logoBottom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>