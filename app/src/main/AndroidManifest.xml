<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uph.m23si3.manuk"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Manuk"
        tools:targetApi="31">

        <!-- Splash Screen (harus exported true) -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activities -->
        <activity android:name=".OnboardingActivity1" android:exported="false" />
        <activity android:name=".OnboardingActivity2" android:exported="false" />

        <!-- Register and Login -->
        <activity android:name=".RegisterActivity" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="true" />

    </application>
</manifest>
